{
    "openapi": "3.1.0",
    "servers": [
        {
            "url": "http://agent-executor:30778",
            "description": "服务器地址"
        }
    ],
    "info": {
        "title": "内置工具箱-搜索工具",
        "description": "包含 智谱搜索 工具",
